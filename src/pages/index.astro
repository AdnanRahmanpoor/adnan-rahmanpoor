---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

import '~/components/style.css';

const metadata = {
  title: 'AdnanRp',
  ignoreTitleTemplate: true,
};

---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero>
    <Fragment slot="title">
      <span class="text-accent dark:text-white highlight"><div id="div">Welcome</div></span>
    </Fragment>
  </Hero>
  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Find out more content in our Blog"
    information={`This blog will contain posts about Python and Web3. It will include tutorials posts and any interesting findings about them.
                `}
  />
</Layout>
