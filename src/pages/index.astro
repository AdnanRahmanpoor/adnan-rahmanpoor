---
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';

import "~/components/style.css";

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import LatestPosts from '~/components/blog/LatestPosts.astro';


const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <!-- Hero Widget ******************* -->

  <Hero image={{ src: import('~/assets/images/hero.png'), alt: 'AstroWind Hero Image' }}>
    <Fragment slot="title">
      <span class="text-accent dark:text-white highlight blink">Welcome</span></Fragment>

  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <!-- HighlightedPosts Widget ******* -->

  <LatestPosts
    title="Find out more content in our Blog"
    information={`This blog will contain posts about Python and Web3. It will include tutorials posts and any interesting findings about them.
                `}
    postIds={[
      ''
    ]}
  />
  
</Layout>
